<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF69B4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="390dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/idSebo"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:text="Sebo Online" />

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hiat="Selecione o genero do livro"
            android:text="Digite o nome do Livro" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="6dp"
            android:text="Selecione a estante" />

        <Spinner
            android:id="@+id/Generos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/generos" />

        <EditText
            android:id="@+id/txtPrecos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:hint="Digite o preÃ§o"
            android:inputType="number" />

        <Button
            android:id="@+id/idAdicione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_light"
            android:padding="16dp"
            android:text="Adicionar Livro"
            android:textStyle="bold" />

        <Button
            android:id="@+id/idVisualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Ver Livros"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>